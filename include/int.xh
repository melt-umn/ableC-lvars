#ifndef _INT_XH
#define _INT_XH


// set up data type

typedef datatype Int Int;
datatype Int {
  I_Top();
  I(int);
  I_Bot();
};

// set up show method

void showInteger(Int* i) {
  match (i) {
    I_Top() -> {printf("Error!");}
    I_Bot() -> {printf("?");}
    I(n) -> {printf("%d", n);}
  }
}

void freeInteger(Int* i) {
  free(i);
}

#endif // INT_H_
