#ifndef _POS_INT_XH
#define _POS_INT_XH

// set up show method

void displayInteger(int i) {
  if (i == 0) {
    printf("?");
  }
  else if (i < 0) {
    printf("Error!");
  }
  else {
    printf("%d", i);
  }
}

int eqInt(int i1, int i2) {
  if (i1 < 0 && i2 < 0) {
    return 1;
  }
  return i1 == i2;
}

#endif
